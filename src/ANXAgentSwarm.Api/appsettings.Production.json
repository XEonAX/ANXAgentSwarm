{
  "$schema": "https://json.schemastore.org/appsettings",
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "${DATABASE_CONNECTION}"
  },
  "Ollama": {
    "BaseUrl": "${OLLAMA_BASE_URL}",
    "DefaultModel": "${OLLAMA_MODEL}",
    "TimeoutSeconds": 120
  },
  "Personas": {
    "Coordinator": { "Model": "${OLLAMA_MODEL}", "Temperature": 0.7 },
    "BusinessAnalyst": { "Model": "${OLLAMA_MODEL}", "Temperature": 0.7 },
    "TechnicalArchitect": { "Model": "${OLLAMA_MODEL}", "Temperature": 0.6 },
    "SeniorDeveloper": { "Model": "${OLLAMA_MODEL}", "Temperature": 0.5 },
    "JuniorDeveloper": { "Model": "${OLLAMA_MODEL}", "Temperature": 0.6 },
    "SeniorQA": { "Model": "${OLLAMA_MODEL}", "Temperature": 0.5 },
    "JuniorQA": { "Model": "${OLLAMA_MODEL}", "Temperature": 0.6 },
    "UXEngineer": { "Model": "${OLLAMA_MODEL}", "Temperature": 0.7 },
    "UIEngineer": { "Model": "${OLLAMA_MODEL}", "Temperature": 0.6 },
    "DocumentWriter": { "Model": "${OLLAMA_MODEL}", "Temperature": 0.7 }
  },
  "Memory": {
    "MaxWordsPerMemory": 2000,
    "MaxIdentifierWords": 10,
    "MaxMemoriesPerPersonaPerSession": 10
  },
  "Workspace": {
    "RootPath": "${WORKSPACE_ROOT}"
  }
}
