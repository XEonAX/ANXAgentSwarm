# ANXAgentSwarm Environment Configuration Template
# Copy this file to .env and customize for your environment
#
# Note: Do not commit .env files with sensitive data to version control

# =============================================================================
# General Settings
# =============================================================================

# Application environment (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Production

# =============================================================================
# API Settings
# =============================================================================

# API server port
API_PORT=5046

# Database connection (SQLite by default)
# For production, consider using a more robust database
DATABASE_CONNECTION="Data Source=./anxagentswarm.db"

# =============================================================================
# Ollama LLM Settings
# =============================================================================

# Ollama server URL
OLLAMA_BASE_URL=http://localhost:11434

# Default model to use (ensure it's pulled: ollama pull gemma3)
OLLAMA_MODEL=gemma3

# Request timeout in seconds
OLLAMA_TIMEOUT=120

# =============================================================================
# Frontend Settings
# =============================================================================

# Frontend port (for development)
WEB_PORT=5173

# API URL (used during build)
VITE_API_URL=http://localhost:5046

# =============================================================================
# Memory System Settings
# =============================================================================

# Maximum words per memory entry
MEMORY_MAX_WORDS=2000

# Maximum words in memory identifier
MEMORY_MAX_IDENTIFIER_WORDS=10

# Maximum memories per persona per session
MEMORY_MAX_PER_PERSONA=10

# =============================================================================
# Workspace Settings
# =============================================================================

# Root path for workspace file operations
WORKSPACE_ROOT=./workspace

# =============================================================================
# Docker Settings
# =============================================================================

# Compose project name
COMPOSE_PROJECT_NAME=anxagentswarm

